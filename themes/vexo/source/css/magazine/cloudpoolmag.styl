.cloudpoolmag
  background-color: #f3f3f3

#magazine-banner
  width: 100%
  box-sizing: border-box
  top: 0
  left: 0
  padding: 80px 20px 25px 20px
  text-align: center
  position: relative
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  @media m-mobile
    padding: 80px 10px 25px 10px

#contents
  a
    position: relative
    text-decoration: none
    padding-bottom: 2px
  a:before
    content: ""
    position: absolute
    width: 100%
    height: 2px
    bottom: 0
    left: 0
    background-color: blue
    visibility: hidden
    -webkit-transform: scaleX(0)
    transform: scaleX(0)
    -webkit-transition: all 0.3s ease-in-out 0s
    transition: all 0.3s ease-in-out 0s
  a:hover:before
    visibility: visible
    -webkit-transform: scaleX(1)
    transform: scaleX(1)

  h3
    font-size: 1.2em
    color: green
    line-height: 0.5em
    &:before
      content: "["
    &:after
      content: "]"

  li
    line-height: 1.5em