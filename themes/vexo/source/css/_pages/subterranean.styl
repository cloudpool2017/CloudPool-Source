#suterranean-banner
  width: 100%
  position: relative
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  height: 350px
  &:after
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    content: ''
    opacity: .25
    background: url(escheres-url)
    background-color: rgba(0, 0, 0, .05)
  @media m-mobile
    height: 250px